 <script>
    function initChatbot() {
      const box = document.createElement("div");
      box.className = "chatbox";
      box.innerHTML = `
        <div class="chat-messages" id="chatLog"></div>
        <input type="text" id="chatInput" placeholder="Ask about the site..." />
        <button onclick="chatSend()">Send</button>
      `;
      document.body.appendChild(box);
    }

    function chatSend() {
      const input = document.getElementById("chatInput");
      const msg = input.value.trim();
      if (!msg) return;

      const chatLog = document.getElementById("chatLog");
      chatLog.innerHTML += `<div><strong>You:</strong> ${msg}</div>`;

      let reply = "I'm here to guide you. Ask about Home, About, Attractions, or Contact.";

      const m = msg.toLowerCase();
      if (m.includes("home")) reply = "Visit the Home page to get an overview of Hyderabad.";
      else if (m.includes("about")) reply = "You're on the About page! Here you can learn about Hyderabad's culture and history.";
      else if (m.includes("attraction") || m.includes("places")) reply = "Check the Attractions page for must-visit places like Charminar and Ramoji Film City.";
      else if (m.includes("contact")) reply = "The Contact page has all the information to reach us.";

      chatLog.innerHTML += `<div><strong>Bot:</strong> ${reply}</div>`;
      chatLog.scrollTop = chatLog.scrollHeight;
      input.value = "";
    }

    window.onload = initChatbot;
  </script>


 .chatbox {
      position: fixed;
      bottom: 20px;
      right: 20px;
      width: 250px;
      background: white;
      border: 1px solid #ccc;
      border-radius: 8px;
      padding: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
