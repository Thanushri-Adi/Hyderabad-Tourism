  <script>
    function initChatbot() {
      const box = document.createElement("div");
      box.className = "chatbox";
      box.innerHTML = `
        <div class="chat-messages" id="chatLog"></div>
        <input type="text" id="chatInput" placeholder="Ask about the site..." />
        <button onclick="chatSend()">Send</button>
      `;
      document.body.appendChild(box);
    }

    function chatSend() {
      const input = document.getElementById("chatInput");
      const msg = input.value.trim();
      if (!msg) return;

      const chatLog = document.getElementById("chatLog");
      chatLog.innerHTML += `<div><strong>You:</strong> ${msg}</div>`;

      let reply = "I'm here to guide you. Ask about Home, About, Attractions, or Contact.";

      const m = msg.toLowerCase();
      if (m.includes("home")) reply = "You're already on the Home page!";
      else if (m.includes("about")) reply = "The About page talks about Hyderabad's culture and history.";
      else if (m.includes("attraction") || m.includes("places")) reply = "Check the Attractions page for top places to visit like Charminar and Golconda.";
      else if (m.includes("contact")) reply = "The Contact page has details to reach us via phone or email.";

      chatLog.innerHTML += `<div><strong>Bot:</strong> ${reply}</div>`;
      chatLog.scrollTop = chatLog.scrollHeight;
      input.value = "";
    }

    window.onload = initChatbot;
  </script>





